# expense-deployer/.env.example
# Copy to .env and fill in values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=ExpenseTracker
APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_URL=http://localhost:8000

# =============================================================================
# Logging
# =============================================================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Engine-specific log level (C++ service)
ENGINE_LOG_LEVEL=info

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_DATABASE=expense_tracker
DB_USERNAME=expense_user
DB_PASSWORD=your_secure_password_here

# External port mapping (host:container)
DB_PORT_EXTERNAL=5432

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=null

# External port mapping
REDIS_PORT_EXTERNAL=6379

# =============================================================================
# gRPC Engine
# =============================================================================
GRPC_TIMEOUT=30
GRPC_RETRY_ATTEMPTS=3
ENABLE_GRPC_REFLECTION=true

# External port mappings
GRPC_PORT_EXTERNAL=50051
ENGINE_METRICS_PORT=9090

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_IMPORT_PER_HOUR=10

# Supported Currencies (comma-separated)
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CNY,CAD,AUD,CHF,SGD,HKD,VND
